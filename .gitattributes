# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files
*.py text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.sh text eol=lf
*.sql text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
requirements.txt text eol=lf
Dockerfile text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.env.example text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.mp4 binary
*.mkv binary
*.avi binary
*.ts binary
*.m3u8 binary
*.db binary
*.sqlite binary
*.sqlite3 binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Exclude files from GitHub language statistics
static/* linguist-vendored
templates/* linguist-vendored
*.html linguist-detectable=false
*.css linguist-detectable=false
*.js linguist-detectable=false

# Mark Python as the primary language
*.py linguist-language=Python